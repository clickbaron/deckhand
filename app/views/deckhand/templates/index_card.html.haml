.card.panel.panel-info(ng-controller="CardCtrl" ng-init="init(item)")

  .panel-heading
    %h3.panel-title
      %span.right
        %a.glyphicon.glyphicon-refresh(ng-click="refresh()")
        %a.glyphicon.glyphicon-remove(ng-click="remove(item)")
      {{item._label}} ({{item.#{@name}.length}})

  %div(collapse="collapse['#{@name}']")
    %table.table
      %thead
        %tr
          %th &nbsp;
          - @columns.each do |column|
            %th(ng-click="sortBy('#{column}', '#{@name}')")
              %i.glyphicon( |
                ng-class="{ |
                  'glyphicon-chevron-up': reverse['#{@name}'] && sortingColumn['#{@name}'] == '#{column}', |
                  'glyphicon-chevron-down': !reverse['#{@name}'] && sortingColumn['#{@name}'] == '#{column}' |
                }" |
              )
              = readable_method_name column
      %tbody
        %tr(ng-repeat="nested_item in item.#{@name} | orderBy:sortingColumn['#{@name}']:reverse['#{@name}']")
          %td
            %a.glyphicon.glyphicon-new-window(ng-click="show(nested_item._model, nested_item.id)")
          - @columns.each_with_index do |column, i|
            %td
              %dh-field(model=@model item="nested_item" name=column)
